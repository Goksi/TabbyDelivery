<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="372.0" prefWidth="404.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tech.goksi.projekatop.controllers.admin.ModifyKorisnikController">
    <Label layoutX="14.0" layoutY="14.0" text="ID:">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <TextField fx:id="idField" disable="true" editable="false" layoutX="53.0" layoutY="19.0" prefHeight="25.0"
               prefWidth="52.0"/>
    <Label layoutX="14.0" layoutY="80.0" text="Username:">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <Label layoutX="14.0" layoutY="146.0" text="Password:">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <Label layoutX="14.0" layoutY="212.0" text="Admin:">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <TextField fx:id="usernameField" layoutX="136.0" layoutY="87.0" onKeyPressed="#onFieldWrite"/>
    <PasswordField fx:id="passwordField" layoutX="136.0" layoutY="151.0" onKeyPressed="#onFieldWrite"/>
    <CheckBox fx:id="adminCheckbox" layoutX="188.0" layoutY="215.0" mnemonicParsing="false">
        <font>
            <Font size="20.0"/>
        </font>
    </CheckBox>
    <Button fx:id="dodajKorisnikaButton" layoutX="141.0" layoutY="312.0" mnemonicParsing="false"
            onAction="#onButtonAction" prefHeight="50.0" prefWidth="123.0" text="Dodaj korisnika"/>
    <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="1.0" layoutY="258.0" prefHeight="50.0"
           prefWidth="398.0" textAlignment="CENTER" textFill="RED">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>
    <Label fx:id="successLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="1.0" layoutY="258.0"
           prefHeight="50.0"
           prefWidth="398.0" textAlignment="CENTER" textFill="GREEN">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>
</AnchorPane>
