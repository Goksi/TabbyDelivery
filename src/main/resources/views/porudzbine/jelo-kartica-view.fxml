<?import javafx.scene.control.Label?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="280.0" maxWidth="229.0" onMouseClicked="#onClick" prefHeight="280.0" prefWidth="180.0"
            style="-fx-border-width: 2; -fx-border-color: #1078ff; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0);"
