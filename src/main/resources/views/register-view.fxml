<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="372.0" prefWidth="503.0" visible="false" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="tech.goksi.projekatop.controllers.RegisterController">
    <Label layoutX="86.0" layoutY="27.0" text="Registracija korisnika">
        <font>
            <Font size="36.0"/>
        </font>
    </Label>
    <Label layoutX="160.0" layoutY="340.0" text="Vec imate nalog ?"/>
    <Label layoutX="274.0" layoutY="340.0" onMouseClicked="#onLoginClick" style="-fx-underline: true; -fx-cursor: HAND;"
           text="Ulogujte se !" textFill="#006699"/>
    <TextField fx:id="usernameField" layoutX="124.0" layoutY="104.0" onKeyPressed="#onFieldWrite" prefHeight="25.0"
               prefWidth="262.0" promptText="Unesite username"/>
    <PasswordField fx:id="passwordField" layoutX="124.0" layoutY="148.0" onKeyPressed="#onFieldWrite" prefHeight="25.0"
                   prefWidth="262.0" promptText="Unesite password"/>
    <PasswordField fx:id="repeatedPasswordField" layoutX="124.0" layoutY="190.0" onKeyPressed="#onFieldWrite"
                   prefHeight="25.0" prefWidth="262.0" promptText="Ponovo unesite password"/>
    <Button layoutX="193.0" layoutY="230.0" mnemonicParsing="false" onAction="#onRegisterClick" prefHeight="39.0"
            prefWidth="118.0" text="Registruj se"/>
    <Label fx:id="errorLabel" alignment="CENTER" layoutX="-1.0" layoutY="286.0" prefHeight="27.0" prefWidth="503.0"
           textAlignment="CENTER" textFill="RED">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
</AnchorPane>
